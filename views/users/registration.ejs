<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <!-- Full jQuery (not slim) and jQuery Validate Plugin -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

    <!-- Custom CSS for form styling -->
    <style>
        /* Background image and overlay */
        body {
            background: url('https://wallpapercave.com/wp/wp5162474.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
            height: 100vh;
        }
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6); /* Dark overlay to make the form readable */
            z-index: 1;
        }

        /* Form container styles */
        .registration-container {
            position: relative;
            z-index: 2; /* Ensure the form is above the overlay */
            margin-top: 80px;
            background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent background for form */
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .registration-container h1 {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 30px;
            text-align: center;
        }
        .form-control {
            border-radius: 8px;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 8px;
            font-size: 18px;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            margin-top: 10px;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }
        .message {
            text-align: center;
            color: green;
            font-size: 16px;
            margin-top: 20px;
        }
        .signin-text {
            text-align: center;
            margin-top: 20px;
        }
    </style>
    
    <script>
        $(document).ready(function () {
            // Validation for sign-up form
            $("#register-form").validate({
                rules: {
                    name: {
                        required: true,
                    },
                    email: {
                        required: true,
                        email: true // built-in email validation
                    },
                    password: {
                        required: true,
                        minlength: 6
                    },
                    mno: {
                        required: true,
                        minlength: 10,
                        maxlength: 10
                    }
                },
                // Custom messages for validation
                messages: {
                    name: {
                        required: "Full name is required"
                    },
                    email: {
                        required: "Email is required",
                        email: "Please enter a valid email address"
                    },
                    password: {
                        required: "Password is required",
                        minlength: "Password must be at least 6 characters long"
                    },
                    mno: {
                        required: "Phone number is required",
                        minlength: "Phone number must be exactly 10 characters",
                        maxlength: "Phone number must be exactly 10 characters"
                    }
                },
                // Form submission handling
                submitHandler: function (form) {
                    form.submit(); // submits the form if validation passes
                }
            });
        });
    </script>

</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="registration-container">
                    <h1>User Registration Form</h1>

                    <form action="" id="register-form" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                        </div>

                        <div class="form-group">
                            <label for="mno">Mobile Number</label>
                            <input type="text" id="mno" name="mno" class="form-control" placeholder="Enter mobile number" required>
                        </div>

                        <div class="form-group">
                            <label for="image">Profile Image</label>
                            <input type="file" id="image" name="image" class="form-control-file" required>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Register</button>


                    </form>

                    <% if (typeof message !== 'undefined') { %>
                        <p class="message"><%= message %></p>
                    <% } %>

                    <!-- Sign In Button -->
                    <div class="signin-text">
                        <p>Already have an account?</p>
                        <a href="/" class="btn btn-secondary btn-block">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
