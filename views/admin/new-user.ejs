<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New User</title>
    <!-- Bootstrap CSS -->
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
<!-- Full jQuery (not slim) and jQuery Validate Plugin -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <style>
        body {
            background-color: #f4f6f9;
        }
        .add-user-container {
            margin-top: 50px;
            padding: 30px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            font-size: 2.5rem;
            color: #007bff;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-add {
            width: 100%;
            margin-top: 20px;
        }
        .go-back {
            display: block;
            text-align: center;
            margin-top: 20px;
            font-size: 1.1rem;
        }
        .message {
            text-align: center;
            color: rgb(56, 155, 61);
            font-weight: bold;
            margin-top: 20px;
        }
    </style>

<script>
    $(document).ready(function () {
        // Validation for sign-up form
        $("#new-user").validate({
            rules: {
                name: {
                    required: true,
                },
                email: {
                    required: true,
                    email: true // built-in email validation
                },
                password: {
                    required: true,
                    minlength: 6
                },
                mno: {
                    required: true,
                    minlength: 10,
                    maxlength: 10
                }
            },
            // Custom messages for validation
            messages: {
                name: {
                    required: "Full name is required"
                },
                email: {
                    required: "Email is required",
                    email: "Please enter a valid email address"
                },
                password: {
                    required: "Password is required",
                    minlength: "Password must be at least 6 characters long"
                },
                mno: {
                    required: "Phone number is required",
                    minlength: "Phone number must be exactly 10 characters",
                    maxlength: "Phone number must be exactly 10 characters"
                }
            },
            // Form submission handling
            submitHandler: function (form) {
                form.submit(); // submits the form if validation passes
            }
        });
    });
</script>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="add-user-container">
                    <h1>Add New User</h1>

                    <form action="" id="new-user" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter your name" required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email" required>
                        </div>

                        <div class="form-group">
                            <label for="mno">Mobile Number</label>
                            <input type="text" class="form-control" name="mno" id="mno" placeholder="Enter mobile number" required>
                        </div>

                        <div class="form-group">
                            <label for="image">Profile Image</label>
                            <input type="file" class="form-control-file" name="image" id="image" required>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
                        </div>

                        <button type="submit" class="btn btn-primary btn-add">Add User</button>
                    </form>

                    <% if (typeof message !== "undefined") { %>
                        <p class="message"><%= message %></p>
                    <% } %>

                    <a href="/admin/dashboard" class="go-back">Go Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

</body>
</html>
